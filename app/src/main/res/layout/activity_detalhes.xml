<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minHeight="180dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.patricioeinstein.peritagem.DetalhesActivity"
    android:elevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <ProgressBar
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/snackbarp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:text="___________________"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/detalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalhes do Acidente"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" />

        <TextView

            android:id="@+id/nnome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nome"
            android:layout_alignBottom="@+id/nome"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Nome do Segurado:"
            android:textSize="14dp"
            android:textColor="#FF0000" />

        <EditText
            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nnome"
            android:ems="10"
            android:background="?attr/actionModeBackground"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/aapolice"
            android:textSize="14dp"
            android:textColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nome"
            android:layout_alignBottom="@+id/nome"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Número de Apólice:"
            />

        <EditText
            android:id="@+id/Apolice"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nnome"
            android:ems="10"
            android:background="?attr/actionModeBackground"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/datasinistro"
            android:textSize="14dp"
            android:textColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nome"
            android:text="Data e Hora do Sinistro:"
       />

        <EditText
            android:id="@+id/dataa"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:focusable="true"
            android:editable="true"
            android:ems="10"
            android:inputType="time"
            android:background="?attr/actionModeBackground"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/llocal"
            android:textSize="14dp"
            android:textColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hhora"
            android:text="Localização em Coordenadas GPS:"
            />

        <EditText
            android:id="@+id/local"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignBaseline="@+id/llocal"
            android:layout_alignBottom="@+id/llocal"
            android:layout_alignLeft="@+id/hora"
            android:layout_alignStart="@+id/hora"
            android:ems="10"
            android:focusable="false"
            android:background="?attr/actionModeBackground"
            android:textSize="14sp"
             />

        <TextView
            android:id="@+id/ruaa"
            android:textSize="14dp"
            android:textColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hhora"
            android:text="Rua/Avenida:"
           />

        <EditText
            android:id="@+id/rua"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nnome"
            android:ems="10"
            android:background="?attr/actionModeBackground"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/provinciaa"
            android:textSize="14dp"
            android:textColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hhora"
            android:text="Província:"
 />

        <EditText
            android:id="@+id/provincia"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nnome"
            android:ems="10"
            android:background="?attr/actionModeBackground"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cidadee"
            android:textSize="14dp"
            android:textColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hhora"
            android:text="Cidade:"
          />

        <EditText
            android:id="@+id/cidade"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nnome"
            android:ems="10"
            android:background="?attr/actionModeBackground"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/velocisegurado"
            android:textSize="14dp"
            android:textColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hhora"
            android:text="Velocidade do Segurado:"
             />

        <EditText
            android:id="@+id/velocidadesegurado"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nnome"
            android:ems="10"
            android:background="?attr/actionModeBackground"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/velociterceiro"
            android:textSize="14dp"
            android:textColor="#FF0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hhora"
            android:text="Velocidade do Terceiro:"
             />

        <EditText
            android:id="@+id/velocidadeterceiro"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nnome"
            android:ems="10"
            android:background="?attr/actionModeBackground"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btngravardetalhes"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:theme="@style/btnRed"
            android:textStyle="normal|bold"
            android:onClick="submeter"
            android:text="Gravar"
            android:layout_gravity="center"
             />
    </LinearLayout>

</ScrollView>

