<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minHeight="180dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.patricioeinstein.peritagem.RegistroActivity"
    android:elevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <ProgressBar
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/snackbarp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/nnome"
            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nome"
            android:layout_alignBottom="@+id/nome"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Nome do Segurado"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <EditText
            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nnome"
            android:ems="10"
            android:background="?attr/actionModeBackground"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/aapolice"
            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nome"
            android:layout_alignBottom="@+id/nome"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Numero de Apolice"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <EditText
            android:id="@+id/Apolice"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nnome"
            android:ems="10"
            android:background="?attr/actionModeBackground"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/datasinistro"
            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nome"
            android:text="Data e Hora do Sinistro"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <EditText
            android:id="@+id/dataa"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:focusable="false"
            android:ems="10"
            android:inputType="time"
            android:background="?attr/actionModeBackground"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/llocal"
            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hhora"
            android:text="Localização em Coordenadas"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <EditText
            android:id="@+id/local"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignBaseline="@+id/llocal"
            android:layout_alignBottom="@+id/llocal"
            android:layout_alignLeft="@+id/hora"
            android:layout_alignStart="@+id/hora"
            android:ems="10"
            android:focusable="false"
            android:background="?attr/actionModeBackground"
            android:textSize="20sp"
             />

        <TextView
            android:id="@+id/mmatricula"
            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hhora"
            android:text="Matricula da Viatura do Segurado"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <EditText
            android:id="@+id/matricula"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nnome"
            android:ems="10"
            android:background="?attr/actionModeBackground"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nomep"
            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hhora"
            android:text="Nome do Proprietario do Veiculo Terceiro"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <EditText
            android:id="@+id/nometerceiro"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nnome"
            android:ems="10"
            android:background="?attr/actionModeBackground"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/matriculater"
            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hhora"
            android:text="Matricula da Viatura do Terceiro"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <EditText
            android:id="@+id/matriculaterceiro"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nnome"
            android:ems="10"
            android:background="?attr/actionModeBackground"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ddescricaoloca"
            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hhora"
            android:text="Descrição do Local e Forma como ocorreu o Acidente"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <EditText
            android:id="@+id/descricaosinistro"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nnome"
            android:ems="10"
            android:background="?attr/actionModeBackground"
            android:textSize="20sp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/danosviatura"
            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hhora"
            android:text="Danos Causados ao Veiculo Segurado"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <EditText
            android:id="@+id/danos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nnome"
            android:ems="10"
            android:background="?attr/actionModeBackground"
            android:textSize="20sp"

            />

        <TextView
            android:id="@+id/danosterc"
            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hhora"
            android:text="Danos Causados ao Veiculo Terceiro"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <EditText
            android:id="@+id/danosterceiro"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nnome"
            android:ems="10"
            android:background="?attr/actionModeBackground"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnsubmeter"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:theme="@style/btnRed"
            android:onClick="submeter"
            android:text="Submeter"
            android:layout_gravity="center"
            android:textStyle="normal|bold" />
    </LinearLayout>

</ScrollView>

